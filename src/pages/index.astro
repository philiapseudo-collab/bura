---
import Layout from '../layouts/Layout.astro';
import FitnessWizard from '../components/FitnessWizard';

const pageDescription = "Get personalized fitness plans designed for Kenyans. Transform your body with custom workout programs, expert coaching, and proven results. Start your fitness journey today.";
---

<Layout title="Get Fit With Bura - Transform Your Body" description={pageDescription}>
	<!-- Hero Section -->
	<section class="relative min-h-[80vh] flex items-center justify-center px-4 py-16 bg-cover bg-center bg-no-repeat" style="background-image: url('/hero-bg.jpg.PNG');">
		<!-- Dark overlay for text readability -->
		<div class="absolute inset-0 bg-bura-black/70"></div>
		
		<!-- Content -->
		<div class="relative z-10 max-w-2xl mx-auto text-center space-y-8">
			<h1 class="text-4xl md:text-5xl font-bold leading-tight text-white">
				Welcome to Your Strongest Self
			</h1>
			<p class="text-lg md:text-xl text-gray-200 leading-relaxed max-w-xl mx-auto">
				Fitness isn't just about looking goodâ€”it's about feeling confident, moving better, and building a body that supports your life. Here we believe that real results come from smart training, sustainable nutrition, and consistent support.
			</p>
			<a 
				href="#wizard-container"
				class="inline-block bg-bura-green text-bura-black font-bold px-8 py-4 rounded-full hover:opacity-90 active:scale-95 transition-all"
			>
				Get Started
			</a>
		</div>
	</section>

	<!-- Wizard Container -->
	<div id="wizard-container" class="min-h-screen bg-bura-black py-16">
		<FitnessWizard client:load />
	</div>
</Layout>

